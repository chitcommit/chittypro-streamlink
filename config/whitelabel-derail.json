{
  "whitelabel": {
    "enabled": true,
    "domain": "derail.me",
    "name": "Derail Camera System",
    "shortName": "Derail Cameras",
    "tagline": "Professional Surveillance, Simplified",

    "branding": {
      "hideChittyBranding": true,
